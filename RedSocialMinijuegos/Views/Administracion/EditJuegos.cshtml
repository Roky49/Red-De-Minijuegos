            @Html.EditorFor(model => model.imagen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.imagen, "", new { @class = "text-danger" })
        </div>
    </div>

  
    <div class="form-group">
        <label for="exampleFormControlTextarea1">CSS</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="css" rows="5">@Model.css</textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">JS</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="scritp" rows="5">@Model.scritp</textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Html</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="hyml" rows="5">@Model.hyml</textarea>
    </div>>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

